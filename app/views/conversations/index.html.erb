<div class="container main-content">
  <div class="row contract">
    <div class="title">
      <p>Messages</p>
    </div>
  </div>

  <div id="lists">
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th class="col-md-4">Message</th>
          <th width="col-md-2">Sender</th>
          <th class="col-md-2">Recipient</th>
          <th class="col-md-2">Date</th>
        </tr>
        <%= render 'layouts/conversations', collection: @conversations %>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to 'back', posts_path %>
  </div>
</div>
