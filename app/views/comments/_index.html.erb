<div id="comments_area">
  <% comments.each do |comment| %>
  <% unless comment.id.nil? %>
  <div class="comment">
    <p>
      <%= comment.content %><br>
      <%=comment.user.name%>
      date : <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      <% if comment.user == current_user %>
      <%= link_to "delete", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, data: { confirm: "really delete?"} %>
      <% end %>
    </p>
  </div>
  <% end %>
  <% end %>
</div>
