<div id="comments_area">
  <table class="table">
    <tbody>
      <% comments.each do |comment| %>
      <% unless comment.id.nil? %>
      <tr id="#comment_<%= @comment.id %>">
        <td class="comment col-md-1" id="csontents_area">
          <%= comment.content %>
        </td>
        <td class="comment col-md-1" id="contents_area">
          <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        </td>
        <td class="comment col-md-1" id="contents_area">
          <a href="/users/<%=comment.user.id%>" class="post-link stretched-link">
            <%=comment.user.name%>
          </a>
        </td>
        <td class="comment col-md-1" id="contents_area">
          <% if comment.user == current_user %>
          <p><%= link_to "delete", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %></p>
          <% end %>
        </td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
