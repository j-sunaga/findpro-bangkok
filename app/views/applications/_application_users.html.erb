<div class="row">
  <h4> Application Users </h4>
</div>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Photo</th>
        <th>Content</th>
        <th>detail</th>
        <th>Message</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @application_users.each do |user| %>
      <tr>
        <td class="user_row"><%= user.name %></td>
        <td><img src="<%=user.profile_image.thumb.url%>" alt="" class="picture-image"></td>
        <td><%= user.content %></td>
        <td><%= link_to 'detail', user %></td>
        <td>
          <% if user.id != current_user.id %>
              <div class="item">
                <%= link_to 'message', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
              </div>
          <% end %>
        </td>
        <% if post.selected_user_id.blank? %>
        <td><a href="/posts/<%=post.id%>/select_user?selected_user_id=<%=user.id %>&status=closed" data-method=post>Assign</a></td>
        <% else %>
          <% if post.selected_user_id == user.id %>
            <td>Assigned</td>
          <% else %>
            <td></td>
          <% end %>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
