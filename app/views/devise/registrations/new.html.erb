<div class="jumbotron jumbotron-fluid clearfix">
  <div class="container">
    <div class="row">
      <div class="box">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <label>Email</label>
          <%= f.email_field :email, autofocus: true, class: "sign-in form-control",autocomplete: "email" %>
        </div>

        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, class: "sign-in form-control",autocomplete: "name" %>
        </div>

        <div class="field">
          <label>Photo</label>
          <%= f.file_field :profile_image, autofocus: true, class: "sign-in form-control",autocomplete: "profile_photo"%>
          <%= f.hidden_field :profile_image_cache %>
        </div>

        <div class="form-group">
          <label>Profile</label>
          <%= f.text_area :content, autofocus: true, row:"5", class: "sign-in form-control",autocomplete: "content" %>
        </div>

        <div class="form-group">
          <label>Purpose</label>
          <%= f.select :applicant_or_recruiter, User.applicant_or_recruiters.keys.to_a, {}, {class: 'form-control input-form'} %>
        </div>

        <div class="form-group">
          <div><label>Category</label></div>
          <% Category.all.each do |category| %>
          <%= f.check_box :category_ids, { multiple: true, checked: @user.category_ids.include?(category.id),disabled: category[:disabled], include_hidden: false }, category[:id] %>
          <label class='badge badge-secondary'><%= category.name %></label>
          <% end %>
        </div>

        <div class="field">
          <label>Password</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", id: "exampleInputPassword1", class: "sign-in form-control" %>
        </div>

        <div class="field">
          <label>Password Confirmation</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "exampleInputPassword1", class: "sign-in form-control"  %>
        </div>

        <button type="submit" class="btn-block btn btn-lg btn-primary btn-sign-in">Sign-up</button>

        <p class="text-center forget-password"><%= render "devise/shared/links" ,class:"forget-password"%></p>

        <% end %>
      </div>
    </div>
  </div>
</div>
