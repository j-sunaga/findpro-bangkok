<div class="row">
  <h4> タスク一覧 </h4>
</div>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>タスク名</th>
        <th>タスク詳細</th>
        <th>終了期限</th>
        <th>ステータス</th>
        <th>優先順位</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td class="post_row"><%= post.title %></td>
        <td><%= post.detail %></td>
        <td><%= post.post_image %></td>
        <td><%= post.status %></td>
        <td><%= post.deadline %></td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p class="navbar-text"><%= link_to "new post", new_post_path %></p>