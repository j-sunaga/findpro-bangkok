<h4>Post Detail</h4>

<div class="row">
  <div class="form-group col-md-6 col-xs-12">
    <label>タスク</label>
    <input type="text" readonly class="form-control show-form" value="<%=@post.title%>">
  </div>
</div>

<div class="row">
  <div class="picture-img">
    <img src="<%=@post.post_image.post_detail.url%>" alt="" class="picture-image">
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6 col-xs-12">
    <label>Post Detail</label>
    <textarea readonly class="form-control show-form" name="post[detail]" rows="5"><%=@post.detail%></textarea>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6 col-xs-12">
    <label>終了期限</label>
    <input type="date" readonly class="form-control show-form" value="<%=@post.deadline%>">
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6 col-xs-12">
    <label>ステータス</label>
    <input type="multiple" readonly class="form-control show-form" value="<%=@post.status%>">
  </div>
</div>

  <div class="row">
    <div class="form-group col-md-6">
    <p>Category</p>
      <% @post.categories.each do |category| %>
        <label class='badge badge-secondary'><%= category.name %></label>
      <% end %>
    </div>
  </div>
  <div id="comments_area">
  <h2>comments</h2>
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post, comment_reply: @comment } %>
  </div>

  <%= render partial: 'comments/form', locals: { comment: @comment, post: @post }%>

<div class="row">
  <div class="form-group col-md-6 col-xs-12">
    <%= link_to '編集', edit_post_path(@post) %>
    <%= link_to '戻る', posts_path %>
  </div>
</div>
