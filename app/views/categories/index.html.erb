<div class="row">
  <h4> Category Index </h4>
</div>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Title</th>
        <th>Users</th>
        <th>categorys</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td class="category_row"><%= category.name %></td>
        <td><% category.users.each do |category_user| %>
        <%= category_user.name %>
        <% end %>
        </td>
        <td><% category.posts.each do |category_post| %>
        <%= category_post.title %>
        <% end %>
        </td>
        <td><%= link_to 'detail', category %></td>
        <td><%= link_to 'edit', edit_category_path(category) %></td>
        <td><%= link_to 'destroy', category, method: :delete, data: { confirm: 'Really Delete Category?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
