<h4>Category Detail</h4>

<div class="row">
  <div class="form-group col-md-6">
    <label>Category Name</label>
      <input type="text" readonly class="form-control show-form" value="<%=@category.name%>">
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6">
    <label>Category Posts</label>
    <div>
      <% @category.posts.each do |post| %>
        <label class='badge badge-secondary'><%= post.title %></label>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6">
    <label>Category Users</label>
    <div>
      <% @category.users.each do |user| %>
        <label class='badge badge-secondary'><%= user.name %></label>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-6">
    <%= link_to 'edit', edit_category_path(@category) %>
    <%= link_to 'back', categories_path %>
  </div>
</div>
